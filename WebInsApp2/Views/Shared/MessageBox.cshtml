@model  Lumos.Web.MessageBox
@{
    ViewBag.Title = "错误提示";
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $.lumos.messageBox({
                type: "@Model.Type",
                isPopup: @(Model.IsPopup==true? "true":"false"),
                title: "@Model.Title",
                content: "@Model.Content",
                redirectUrl: "@Html.Raw(Model.RedirectUrl)",
                errorStackTrace: "@Html.Raw(Model.ErrorStackTrace)"
            });
        });
    </script>
}
